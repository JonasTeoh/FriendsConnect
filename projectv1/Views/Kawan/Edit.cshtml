@model projectv2.Models.KawanViewModel

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card shadow-lg">
                <div class="card-header text-center">
                    <h3 class="mb-0">Edit Friend</h3>
                </div>
                <div class="card-body">
                    @if (Model is null)
                    {
                        <p>No friends found with this ID</p>
                    }
                    else
                    {
                        <form method="post">
                            <div class="mt-3">
                                <label class="form-label">Name</label>
                                <input type="text" class="form-control" asp-for="Name" readonly />
                            </div>

                            <div class="mt-3">
                                <label class="form-label">Select Group</label>
                                <select class="form-select" asp-for="GroupId">
                                    <option value="" disabled>Select a group</option>
                                    @foreach (var group in Model.Groups)
                                    {
                                        <option value="@group.Id" selected="@(group.Id == Model.GroupId)">@group.Name</option>
                                    }
                                </select>
                            </div>

                            <div class="mt-3 d-flex justify-content-between">
                                <button type="submit" class="btn btn-primary me-3">Save</button>
                                <a asp-controller="Kawan" asp-action="Index" class="btn btn-secondary">Back</a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles -->
<style>
    .card-header {
        background-color: #1E90FF;
        color: white;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .btn-primary {
        background-color: #1E90FF;
        border-color: #1E90FF;
    }

        .btn-primary:hover {
            background-color: #155a94;
            border-color: #155a94;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            border-color: #545b62;
        }

    .form-label {
        font-weight: bold;
    }

    .mt-3 {
        margin-top: 1rem;
    }
</style>
