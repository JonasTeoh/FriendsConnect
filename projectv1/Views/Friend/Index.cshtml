@{
}
<h1>List of Friends</h1>

<a asp-controller="Friend" asp-action="Create" class="btn btn-primary">Add Friend</a>
<br />

<table class="table">
	<thead>
		<tr>
			<!--table row-->
			<th>ID</th>    <!--table header-->
			<th>Name</th>
			<th>Contact Info</th>
			<th>Birthday</th>
			<th>Notes</th>
			<th>Group ID</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var friend in Model)
		{
			<tr>
				<td>@friend.Id</td>
				<td>@friend.Name</td>
				<td>@friend.ContactInfo</td>
				<td>@friend.Birthday</td>
				<td>@friend.Notes</td>
				<td>@friend.GroupId</td>
				<td>
					<div class="d-flex justify-content-left">
						<a asp-controller="Friend" asp-action="Edit" asp-route-id="@friend.Id" class="btn btn-primary me-2">Edit</a>
						<form asp-controller="Friend" asp-action="Delete" asp-route-id="@friend.Id" method="post">
							<button type="submit" class="btn btn-danger">Delete</button>
						</form>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table> 