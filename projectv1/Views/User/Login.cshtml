@model projectv2.Models.LoginViewModel
    <style>


        .login-container {
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-card {
            display: flex;
            background: white;
            border-radius: 15px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            max-width: 900px;
            width: 100%;
        }

        .login-image {
            background: url('/img/login.png') no-repeat center center;
            background-size: cover;
            width: 50%;
            margin: 50px;
        }

        .login-form {
            padding: 40px 30px;
            width: 50%;
        }

            .login-form h1 {
                font-size: 32px;
                color: dodgerblue;
                font-weight: bold;
                margin-bottom: 20px;
            }

        .form-control {
            border-radius: 10px;
            border: 1px solid #d0d7de;
            box-shadow: none;
            font-size: 14px;
        }

            .form-control:focus {
                border-color: dodgerblue;
                box-shadow: 0 0 5px dodgerblue;
            }

        .btn-primary {
            background-color: dodgerblue;
            border: none;
            padding: 10px 15px;
            border-radius: 10px;
            font-size: 16px;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #1e90ff;
            }

        .btn-secondary {
            border: none;
            padding: 10px 15px;
            border-radius: 10px;
            font-size: 16px;
            font-weight: bold;
            transition: all 0.3s ease;
        }

        .error-message {
            background-color: #ffe6e6;
            color: #d9534f;
            padding: 10px;
            border-radius: 8px;
            font-size: 14px;
            margin-bottom: 15px;
        }
    </style>
<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-image">
            </div>
            <div class="login-form">
                <h1>Login</h1>
                <br>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="error-message">
                        <strong>Error!</strong> Invalid login attempt.
                    </div>
                }

                <form asp-controller="User" asp-action="Login" method="post">
                    <div class="mb-4">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" type="email" required/>
                    </div>
                    <div class="mb-4">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" type="password" required />
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Login</button>
                </form>
                <!-- Register Button -->
                <div class="mt-3 text-center">
                    <p>Don't have an account?</p>
                    <a asp-controller="User" asp-action="Register" class="btn btn-secondary w-100">Register</a>
                </div>
            </div>
        </div>
    </div>
</body>
