@model projectv2.Models.UserViewModel

<style>


    .login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 20px;
    }

    .login-card {
        display: flex;
        background: white;
        border-radius: 15px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        max-width: 900px;
        width: 100%;
    }

    .login-image {
        background: url('/img/signup2.png') no-repeat center center;
        background-size: cover;
        width: 50%;
        margin: 50px;
    }

    .login-form {
        padding: 40px 30px;
        width: 50%;
    }

        .login-form h1 {
            font-size: 32px;
            color: dodgerblue;
            font-weight: bold;
            margin-bottom: 20px;
        }

    .form-control {
        border-radius: 10px;
        border: 1px solid #d0d7de;
        box-shadow: none;
        font-size: 14px;
    }

        .form-control:focus {
            border-color: dodgerblue;
            box-shadow: 0 0 5px dodgerblue;
        }

    .btn-primary {
        background-color: dodgerblue;
        border: none;
        padding: 10px 15px;
        border-radius: 10px;
        font-size: 16px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #1e90ff;
        }

    .btn-secondary {
        border: none;
        padding: 10px 15px;
        border-radius: 10px;
        font-size: 16px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

    .error-message {
        background-color: #ffe6e6;
        color: #d9534f;
        padding: 10px;
        border-radius: 8px;
        font-size: 14px;
        margin-bottom: 15px;
    }
</style>

<div class="login-container">
    <div class="login-card">

        <div class="login-form">
            <h1>Register New User</h1>

            <br>
            @if (ViewData.ModelState["Email"] != null && ViewData.ModelState["Email"].Errors.Count > 0)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData.ModelState["Email"].Errors[0].ErrorMessage
                </div>
            }
            <form method="post">
                <div class="mb-4">
                    <label class="form-label"> Name </label>
                    <input type="text" class="form-control" asp-for=Name required/>
                </div>

                <div class="mb-4">
                    <label class="form-label"> Email </label>
                    <input type="email" class="form-control" asp-for="Email" required />
                </div>

                <div class="mb-4">
                    <label class="form-label"> Contact Info </label>
                    <input type="text" class="form-control" asp-for=ContactInfo required />
                </div>

                <div class="mb-4">
                    <label class="form-label"> Birthday </label>
                    <input type="date" class="form-control" asp-for=Birthday required />
                </div>

                <div class="mb-4">
                    <label class="form-label"> Password </label>
                    <input type="password" class="form-control" asp-for="Password" required minlength="6" />
                </div>

                <div class="mb-4">
                    <button type="submit" class="btn btn-primary me-2">Save</button>
                    <a asp-controller="User" asp-action="Login" class="btn btn-secondary">Back</a>
                </div>
            </form>
        </div>
        <div class="login-image">
        </div>
    </div>
</div>